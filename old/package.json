{
  "name": "ls-lostshirt",
  "version": "1.0.0",
  "description": "A small online store selling T-shirts",
  "scripts": {
    "dev": "gulp start",
    "build": "gulp build",
    "test": "npm run editorconfig && npm run stylelint",
    "stylelint": "npm stylelint \"source/sass/**/*.scss\" --syntax scss",
    "editorconfig": "editorconfig-cli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ewudes/ls-lostShirt.git"
  },
  "author": "Ewudes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ewudes/ls-lostShirt/issues"
  },
  "homepage": "https://github.com/ewudes/ls-lostShirt#readme",
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "devDependencies": {
    "autoprefixer": "10.3.1",
    "browser-sync": "2.29.3",
    "del": "6.0.0",
    "gulp": "4.0.2",
    "gulp-csso": "4.0.1",
    "gulp-htmlmin": "5.0.1",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-posthtml": "3.0.5",
    "gulp-rename": "2.0.0",
    "gulp-sass": "5.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-svgstore": "8.0.0",
    "gulp-uglify": "3.0.2",
    "gulp-webp": "4.0.1",
    "posthtml-include": "1.7.1",
    "stylelint": "13.13.1"
  }
}
